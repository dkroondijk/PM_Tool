<div class = "container">
  <h1>Task</h1>
</div>
  
<div class = "container">
<%= @task.title %>
</div>
<br>
<div class = "container">
Due Date: <%= @task.due_date %>
</div>  
<br>
<div class = "container">
  <%= link_to "Edit", edit_task_path, class: "btn btn-primary" %> |
  <%= link_to "Delete", task_path(@task), class: "btn btn-primary", method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %>
</div>
  