<div class = "container">
  <h1><%= @project.title %></h1>
</div>
<div class = "container">
  <h4><%= @project.description %></h4>
</div>
<div class = "container">
<p>Due Date: <%= @project.due_date %></p>
</div>
<div class = "container">
<%= link_to "Edit", edit_project_path(@project), class: "btn btn-primary" %> |
<%= link_to "Delete", project_path(@project), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this project?"} %>
<br>
<br>
<%= link_to "Discussion", project_discussions_path(@project), class: "btn btn-info" %>
</div>
<br>
<div class = "container">
  <table class = "table">
    <tr>
      <th>Task</th>
      <th>Due Date</th>
      <th>Status</th>
    </tr>

      <% @project.tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.due_date %></td>
          <td><%= link_to (task.status?? "Complete" : "Incomplete"), project_task_path(@project, task, task: {status: !task.status}), method: :patch %></td>
        </tr>
      <% end %>    
  </table>

  <h3>Add Task</h3>
  <%= form_for @task, url: project_tasks_path(@project) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
    <br>
    <%= f.submit "Add Task" %>
  <% end %>
</div>

<div class="container">

  
</div>
  
  

  
