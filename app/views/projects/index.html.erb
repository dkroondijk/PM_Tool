<div class = "container">
  <h1>Projects</h1>
</div>
<br>
<div class = "container">
  <%= link_to "Create New Project", new_project_path, class: "btn btn-primary" %>
</div>
<br>
<br>
<br>
<div class = "container">
  <table class = "table">
    <tr>
      <th>Project</th>
      <th>Owner</th>
    </tr>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project_path(project) %></td>
        <td><%= project.user.name_display %></td>
      </tr>
    <% end %>
  </table>
</div>
