<div class="container">

  <h1><%= @discussion.title %></h1>
  <h3><%= @discussion.description %></h3>  
</div>

<div class = "container">
  <table class = "table">
    <tr>
      <th>Comments</th>
      <th></th>
    </tr>

    <% @discussion.comments.each do |comment| %>
    <tr>
      <td><%= comment.body %></td>
      <td>
        <%= link_to "Edit", edit_discussion_comment_path(@discussion, comment) %> |
        <%= link_to "Delete", discussion_comment_path(@discussion, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
      </td>
    </tr>
    <% end %>  
  </table>
</div>

<div class = "container">
  <h3>Add Comment</h3>

  <%= form_for [@discussion, @comment] do |f| %>
    <%= f.text_area :body %>
    <%= f.submit "Add" %>
  <% end %>
  
</div>