<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for [@discussion, @comment], remote: true do |f| %>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control" %>
    <%= f.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
  